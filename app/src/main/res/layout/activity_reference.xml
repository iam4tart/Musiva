<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ref"
    tools:context=".Reference">





<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="1.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.0">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edtMusicTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please enter the music term"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btnGetMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtMusicTerm"
                android:ems="10"
                android:hint="Enter the music term"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:background="@drawable/rounded_textin"
                android:layout_marginLeft="20dp"
                android:textColorHint="@color/black"
                android:inputType="textPersonName" />


            <Button
                android:id="@+id/btnGetMusic"
                android:layout_width="317dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"

                android:backgroundTint="@color/search"
                android:text=" Search " />

            <WebView
                android:id="@+id/wbvMusic"
                android:layout_width="367dp"
                android:layout_marginBottom="5dp"
                android:layout_height="540dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_webv"
                android:gravity="center_horizontal"
                android:textColor="#2196F3"
                android:textSize="12sp" />
        </LinearLayout>


    <WebView
        android:id="@+id/wbvMusic"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:gravity="center_horizontal"
        android:textColor="#2196F3"
        android:textSize="12sp" />
</LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


