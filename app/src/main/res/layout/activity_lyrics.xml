<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lyrics"
    tools:context=".Lyrics">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtArtistName"
                android:layout_marginTop="30dp"
                android:layout_width="360dp"
                android:layout_marginLeft="20dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_textin"
                android:textColorHint="@color/black"
                android:ems="10"
                android:paddingLeft="30dp"
                android:hint="Enter Artist Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtSongName"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:background="@drawable/rounded_textin"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:textColorHint="@color/black"
                android:hint="Enter Song name"
                android:inputType="textPersonName" />

            <ImageButton
            android:id="@+id/btnGetLyrics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:alpha="1"
            android:background="@color/Lyrics"
            android:src="@drawable/search_lyr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtLyrics"
                android:layout_width="match_parent"
                android:layout_height="590dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>